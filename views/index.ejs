<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Khaatabook</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>

  <body class="bg-zinc-100 min-h-screen flex flex-col">
    <!-- Navbar -->
    <nav
      class="w-full py-6 px-8 flex items-center justify-between font-medium shadow-md bg-white"
    >
      <h2 class="font-bold text-2xl text-black">Khaatabook</h2>
      <div class="flex gap-8 text-base font-semibold items-center">
        <a href="/" class="text-sky-900 transition">Home</a>
        <a href="/create" class="text-sky-900 transition"
          >Create New Hisaab</a
        >
      </div>
    </nav>

    <!-- Collections Section -->
    <section class="p-6 flex-grow flex justify-center mt-10">
      <div class="w-full max-w-2xl">
        <h1
          class="text-gray-900 font-bold text-3xl text-center tracking-tight mb-8"
        >
          Your Collections
        </h1>

        <!-- Collection Items -->
        <% if (files.length > 0) { %> <% files.forEach((file) => { %>
        <div
          class="bg-sky-700 text-gray-100 h-18 text-xl font-bold px-6 py-4 rounded-lg shadow-md flex items-center justify-between mb-4"
        >
          <div class="flex items-center gap-5">
            <h1 class=" text-lg"><%= file.split('.')[0] %></h1>
            <a href="/hisaab/<%= file %>"
              ><span
                class="bg-slate-100 p-2 rounded-full flex items-center justify-center w-7 h-7"
              >
                <i class="ri-arrow-right-line text-lg text-black"></i> </span
            ></a>
          </div>
          <div class="flex gap-5 items-center">
            <a
              href="/edit/<%= file %>"
              class="text-gray-300 hover:text-white transition"
            >
              <i class="ri-edit-line text-lg"></i>
            </a>
            <a
              href="/delete/<%= file %>"
              class="text-gray-300 hover:text-white transition"
            >
              <i class="ri-delete-bin-line text-lg"></i>
            </a>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="flex justify-center mt-10">
          <h3 class="text-2xl font-bold text-gray-600">
            You haven't created any collection yet, please create one to see it
            here.
          </h3>
        </div>
        <% } %>
      </div>
    </section>
  </body>
</html>
